<html lang="en" >
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Angular Material style sheet -->
    <link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/angular_material/1.1.0/angular-material.min.css">
</head>
<body ng-app="todo" ng-cloak ng-controller="taskController">

<md-toolbar class="md-hue-2">
    <div class="md-toolbar-tools">
        <h2>
            <span >{{ topic }}</span>
        </h2>
        <span flex></span>
    </div>
</md-toolbar>
<md-button class="md-fab md-fab-bottom-right">
    +
</md-button>
<md-content>
    <md-list flex>
        <md-list-item class="md-3-line">
            <div class="md-list-item-text" layout="column" >
                <h1>Description</h1>
                <h3>{{tasks[0].description}}</h3>
            </div>
        </md-list-item>
    </md-list>
    <md-divider ></md-divider>
    <md-list flex>
        <md-list-item class="md-3-line" ng-repeat="item in tasks">
            <div class="md-list-item-text" layout="column" >
                <h3>{{ item.task }}</h3>
            </div>
            <md-checkbox ng-checked="item.isDone" ng-click="updateTaskIsDone(item)">
            </md-checkbox>
            <md-divider ></md-divider>
        </md-list-item>
    </md-list>
</md-content>

<!-- Angular Material requires Angular.js Libraries -->
<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-animate.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-aria.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-messages.min.js"></script>
<script src="javascripts/taskController.js"></script>
<script src="services/exchangeTodoID.js"></script>

<!-- Angular Material Library -->
<script src="http://ajax.googleapis.com/ajax/libs/angular_material/1.1.0/angular-material.min.js"></script>

</body>
</html>