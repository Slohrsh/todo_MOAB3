<!--taskController-->
<md-toolbar class="md-hue-2">
    <div class="md-toolbar-tools">
        <h2>
            <span >{{ topic }}</span>
        </h2>
        <span flex></span>
        <md-button class="md-icon-button" aria-label="Edit" ng-click="updateTodo()">
            <md-icon md-svg-icon="images/ic_edit_white_24px.svg"></md-icon>
        </md-button>
        <md-button class="md-icon-button" aria-label="Delete" ng-click="deleteTodo()">
            <md-icon md-svg-icon="images/ic_delete_white_24px.svg"></md-icon>
        </md-button>
    </div>
</md-toolbar>
<md-button class="md-fab md-fab-bottom-right" ng-click="addNewTask()">
    <md-icon md-svg-src="images/ic_add_white_24px.svg"></md-icon>
</md-button>
<md-content>
    <md-content layout-padding>
        <h1>Description</h1>
        <p>{{tasks[0].description}}</p>
    </md-content>
    <md-divider ></md-divider>
    <md-list>
        <md-list-item class="secondary-button-padding" ng-repeat="item in tasks" ng-click="editTask(item.idtodo_tasks)">
            <p>{{ item.task }}</p>
            <md-checkbox ng-checked="item.isDone" ng-click="updateTaskIsDone(item)">
            </md-checkbox>
            <md-divider ></md-divider>
        </md-list-item>
    </md-list>
</md-content>