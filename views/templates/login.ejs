<!--logInController-->
<md-toolbar class="md-hue-2">
  <div class="md-toolbar-tools">
    <h2>
      <span>LogIn</span>
    </h2>
    <span flex></span>
    <md-button class="md-icon-button" aria-label="Edit" ng-click="updateTodo()">
      <md-icon ng-click="signIn()"md-svg-icon="images/ic_perm_identity_white_24px.svg"></md-icon>
    </md-button>
  </div>
</md-toolbar>
<md-content layout-gt-sm="row" layout-padding>
  <div>
    <md-input-container>
      <label>Username</label>
      <input ng-model="name">
    </md-input-container>

    <md-input-container>
      <label>Password</label>
      <input ng-model="passwd" type="password">
    </md-input-container>
  </div>
</md-content>

<md-button class="md-raised md-primary" ng-click="verifyCredentials()">LogIn</md-button>
