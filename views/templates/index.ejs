<body ng-app="todo" ng-cloak ng-controller="logInController">

<md-toolbar class="md-hue-2">
  <div class="md-toolbar-tools">
    <h2>
      <span>LogIn</span>
    </h2>
    <span flex></span>
  </div>
</md-toolbar>
<md-content layout-gt-sm="row" layout-padding>
  <div>
    <md-input-container>
      <label>Username</label>
      <input ng-model="name">
    </md-input-container>

    <md-input-container>
      <label>Password</label>
      <input ng-model="passwd" type="password">
    </md-input-container>
  </div>
</md-content>

<md-button class="md-raised md-primary" ng-click="verifyCredentials()">LogIn</md-button>

<!-- Angular Material requires Angular.js Libraries -->
<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular.min.js"></script>
